@model WebMessageApp.Models.CountdownViewModel

<div style="text-align:center; font-family:Arial;">
    <h2>Start Time</h2>
    <p>@Model.StartTime.ToString("MMM dd, yyyy")<br />@Model.StartTime.ToString("hh:mm tt")</p>

    <h2>End Time</h2>
    <p>@Model.EndTime.ToString("MMM dd, yyyy")<br />@Model.EndTime.ToString("hh:mm tt")</p>

    <h2>Time Remaining</h2>
    @{
        var remaining = Model.TimeRemaining;
        if (remaining.TotalSeconds <= 0)
        {
            <p>The countdown has ended.</p>
        }
        else
        {
            <p>
                @remaining.Days Day(s), 
                @remaining.Hours Hour(s), 
                @remaining.Minutes Minute(s) Remaining
            </p>
        }
    }
</div>
