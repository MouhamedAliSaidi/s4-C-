@model Dish

<h2>Add a new Dish!</h2>
<a href="/dishes">Home</a> | <a href="/dishes/new">Add a Dish</a>
<hr />

<form asp-action="Create" asp-controller="Dishes" method="post">
    <div>
        <label>Chef's Name</label>
        <input asp-for="Chef" />
        <span asp-validation-for="Chef" class="text-danger"></span>
    </div>
    
    <div>
        <label>Name of Dish</label>
        <input asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div>
        <label># of Calories</label>
        <input asp-for="Calories" />
        <span asp-validation-for="Calories" class="text-danger"></span>
    </div>

    <div>
        <label>Tastiness</label>
        <select asp-for="Tastiness">
            <option>1</option>
            <option>2</option>
            <option>3</option>
            <option>4</option>
            <option>5</option>
        </select>
        <span asp-validation-for="Tastiness" class="text-danger"></span>
    </div>

    <div>
        <label>Description</label>
        <textarea asp-for="Description"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <button type="submit">Add Dish</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
