@model List<Dish>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Yum! Check out our tasty dishes!</h2>
<table>
    <thead>
        <tr><th>Name</th><th>Chef</th><th>Tastiness</th><th>Calories</th></tr>
    </thead>
    <tbody>
    @foreach (var dish in Model)
    {
        <tr>
            <td>@dish.Name</td>
            <td>@dish.Chef?.FirstName @dish.Chef?.LastName</td>
            <td>@dish.Tastiness</td>
            <td>@dish.Calories</td>
        </tr>
    }
    </tbody>
</table>
