@model Pet
@{
    ViewData["Title"] = "Add New Pet";
}

<h2>Add a New Pet</h2>

<form asp-action="Create" method="post">
    <div>
        <label asp-for="Name"></label>
        <input asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div>
        <label asp-for="PetType"></label>
        <input asp-for="PetType" />
        <span asp-validation-for="PetType"></span>
    </div>
    <div>
        <label asp-for="Age"></label>
        <input asp-for="Age" type="number" />
        <span asp-validation-for="Age"></span>
    </div>
    <div>
        <label asp-for="HasFur"></label>
        <input asp-for="HasFur" type="checkbox" />
    </div>
    <button type="submit">Add Pet</button>
</form>
