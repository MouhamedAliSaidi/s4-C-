@model Pet
@{
    ViewData["Title"] = "Edit Pet";
}

<h2>Edit Pet</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div>
        <label asp-for="Name"></label>
        <input asp-for="Name" />
    </div>
    <div>
        <label asp-for="PetType"></label>
        <input asp-for="PetType" />
    </div>
    <div>
        <label asp-for="Age"></label>
        <input asp-for="Age" type="number" />
    </div>
    <div>
        <label asp-for="HasFur"></label>
        <input asp-for="HasFur" type="checkbox" />
    </div>
    <button type="submit">Save</button>
</form>
