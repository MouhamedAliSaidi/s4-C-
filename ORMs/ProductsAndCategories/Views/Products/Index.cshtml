@model List<Product>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>New Product</h2>
<form asp-action="Create" method="post">
    <label>Name:</label>
    <input name="Name" /><br/>
    <label>Description:</label>
    <input name="Description" /><br/>
    <label>Price:</label>
    <input name="Price" type="number" step="0.01" /><br/>
    <button>Create</button>
</form>

<h2>All Products</h2>
<ul>
@foreach (var p in Model)
{
    <li><a href="/products/@p.ProductId">@p.Name</a></li>
}
</ul>
